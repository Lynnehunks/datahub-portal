<AeFlex Vertical class="recent-card-container">
  @foreach (var card in GetCards())
  {
    <AeFlex class="recent-card">
      <i class="@card.Icon" />
      <AeFlex Vertical>
        <AeTypography class="title">@card.Title</AeTypography>
        <AeTypography class="subtitle">@card.Subtitle</AeTypography>
      </AeFlex>
    </AeFlex>
  }
</AeFlex>


@code {

  private List<(string Icon, string Title, string Subtitle)> GetCards()
  {
    return new List<(string, string, string)>()
    {
      ("fad fa-keyboard", "PIP Web Form", "SPI Performance Measurement >> Data Entry"),
      ("fad fa-keyboard", "PIP Web Form", "SPI Performance Measurement >> Data Entry"),
